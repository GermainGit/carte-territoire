<style> .navbar-expand-md { display: none } </style>

<div class="background_img">
<%= image_tag("NoFACES.jpg", :alt => "background") %>
</div>

  <div class="backnav">
  <a href=""></a>
  <%= link_to image_tag("left-arrow.png", alt: "retour"),photos_path, width: 64, height: 64 %>
  </div>

<div class="full-page">
  <div class="blockform">
    <h2>TU VEUX CONTRIBUER?</h2>

          <div class="form">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
             <div class="field">
              <%= f.text_field :prenom, placeholder: "Prénom", autofocus: true, autocomplete:"prenom", size: 40 %>
            </div>
            <br>
            <div class="field">
              <%= f.text_field :nom, placeholder: "Nom",autocomplete: "nom", size: 40 %>
            </div>
            <br>
            <div class="field">
              <%= f.email_field :email, placeholder: "Mail",autocomplete: "email", size: 40 %>
            </div>
            <p class="checkbox_text">Pouvoir me contacter ?</p>
            <div class="checkbox">
                <%= f.input :public, as: :boolean, checked_value: false, unchecked_value: true, label: "" %>&nbsp&nbsp
                <p class="yes">NON</p>
            </div>
            <div class="field">
              <% if @minimum_password_length %>
              <% end %><br />
              <%= f.password_field :password, placeholder: "Mot de passe (6 caractère min)", autocomplete: "new-password", size: 40 %>
            </div>
            <div class="field">
              <%= f.password_field :password_confirmation, placeholder: "Confirmer mdp",autocomplete: "new-password", size: 40 %>
            </div>
          </div>

            <div class="actions">
              <%= f.submit "En route !", :class => 'signupbutton' %>
          </div>

            <br>
          <% end %>
  </div>
</div>

