<%= link_to image_tag('arrow.svg', alt: 'bouton retour', id: 'back_img'), photos_path, id: 'back' %>



<%= render 'form_edit', photo: @photo %>


<script>

    var long = <%= @photo.long %>;
    var lat = <%= @photo.lat %>;
    var icon = L.icon({
      iconUrl: '<%= @photo.file %>',
      iconSize: [25, 25],
    });
    var markerLocation = new L.LatLng(lat, long);
    var marker = new L.Marker(markerLocation, {icon: icon});
    map.addLayer(marker);

</script>
