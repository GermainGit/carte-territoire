<% content_for :title, "La carte & le territoire - Connexion" %>

  <div class="backnav">
  <%= link_to image_tag("left-arrow.png", alt: "retour"),photos_path %>
  </div>

  <div class="row justify-content-center">
    <div class="col-lg-4 card_form">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <h2>CONNEXION</h2>
          <div class="form-group">
            <div class="field_user">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email"},
                          placeholder: "Email",
                          label: false %>
            </div>
          </div>

          <div class="form-group">
            <div class="field_user">
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password"},
                          placeholder: "Mot de passe",
                          label: false %>
            </div>
          </div>

          <div class="form-group">
            <div class="checkbox">
              <%= f.input :remember_me, label: false, as: :boolean if devise_mapping.rememberable? %>&nbsp&nbsp
              <p class="checkboxtitle">Se souvenir de moi</p>
            </div>
          </div>


          <div class="form-group">
            <div class="actions">
              <%= f.submit "Connexion", :class => 'signupbutton' %>
              <p class="btn_render"><%= render "devise/shared/links" %></p>
            </div>

          </div>
          <% end %>
  </div>
</div>




