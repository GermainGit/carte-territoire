<% content_for :title, "La carte & le territoire - Editer mon profil" %>

 <div class="row justify-content-center">
    <div class="col-lg-4 card_form">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <div id="notice"></div> <%= f.error_notification %>
        <h2>CONNEXION</h2>
          <div class="form-group">
            <div class="field_user">
          <%= f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email", size: 40}, placeholder: "Email", label: false %>
        </div>
          </div>

          <div class="form-group">
            <div class="field_user">
          <%= f.input :bio, placeholder: "Quelques mots sur vous", size: 40, as: :text, label: false %>
        </div>
          </div>

          <div class="form-group">
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p><%= t(".currently_waiting_confirmation_for_email", email: resource.unconfirmed_email) %></p>
        <% end %>
        <div class="field_user">
          <%= f.input :password, required: false, input_html: { autocomplete: "new-password"}, placeholder: "Mot de passe*", label: false, size: 40 %>
        </div>
        <p class="subtitle">* Laissez vide si vous ne souhaitez pas le changer</p>
          </div>

          <div class="form-group">
            <div class="field_user">
          <%= f.input :password_confirmation, required: false, input_html: { autocomplete: "new-password"}, placeholder: "Confimer mot de passe", label: false, size: 40 %>
        </div>
          </div>

          <div class="form-group">
            <div class="field_user">
          <%= f.input :current_password, required: true, input_html: { autocomplete: "current-password"}, placeholder: "Mot de passe actuel", label: false%>
        </div>
          </div>


          <div class="form-group">
            <div class="actions">
          <%= f.submit "Modifier", :class => 'signupbutton' %>
          <p><%= link_to t(".cancel_my_account"), registration_path(resource_name), data: { confirm: t(".are_you_sure") }, method: :delete %></p>

    <%= link_to t("devise.shared.links.back"), :back %>
        </div>

          </div>
          <% end %>
  </div>
</div>







